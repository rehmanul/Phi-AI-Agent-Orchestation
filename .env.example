# =============================================================================
# AI Agent Orchestration - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=advocacy-orchestration
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# LLM API Keys (at least one required)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Primary LLM provider: openai or anthropic
LLM_PROVIDER=openai

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=advocacy_db
POSTGRES_USER=advocacy_user
POSTGRES_PASSWORD=your-strong-password-here
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# -----------------------------------------------------------------------------
# Message Queue (Kafka)
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=advocacy-agents
KAFKA_TOPIC_PREFIX=advocacy

# -----------------------------------------------------------------------------
# Object Storage (MinIO / S3)
# -----------------------------------------------------------------------------
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=advocacy-content
S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# Congress.gov API
# -----------------------------------------------------------------------------
CONGRESS_API_KEY=your-congress-api-key-here
CONGRESS_API_BASE_URL=https://api.congress.gov/v3

# -----------------------------------------------------------------------------
# Social Media APIs
# -----------------------------------------------------------------------------
# Twitter/X API v2
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_SECRET=your-access-secret
TWITTER_BEARER_TOKEN=your-bearer-token

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=AdvocacyBot/1.0

# Facebook/Meta
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-page-id

# -----------------------------------------------------------------------------
# News APIs
# -----------------------------------------------------------------------------
NEWSAPI_KEY=your-newsapi-key-here
GOOGLE_NEWS_RSS_URL=https://news.google.com/rss

# -----------------------------------------------------------------------------
# Email Service (SendGrid)
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Advocacy Campaign

# -----------------------------------------------------------------------------
# Voice/SMS (Twilio)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# API Server Settings
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your-super-secret-jwt-key-change-in-production
API_ACCESS_TOKEN_EXPIRE_MINUTES=60

# -----------------------------------------------------------------------------
# Dashboard Settings
# -----------------------------------------------------------------------------
DASHBOARD_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Sentry (optional)
SENTRY_DSN=
